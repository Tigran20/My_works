<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    tools:context="com.tigran.calculator.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button10"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="."
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button0" />

    <Button
        android:id="@+id/button0"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="0"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
        app:layout_constraintStart_toEndOf="@+id/buttonDot" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="1"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="2"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="3"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="4"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="5"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="6"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Material.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:text="7"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/button8"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:elevation="0dp"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:padding="0dp"
        android:text="8"
        android:textAlignment="center"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:padding="0dp"
        android:text="9"
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="64dp"
        android:minWidth="90dp"
        android:text="/"
        android:textColorLink="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/buttonMultiply"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="64dp"
        android:minWidth="90dp"
        android:text="*"
        android:textColorLink="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/buttonDivide"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/buttonMinus"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="64dp"
        android:minWidth="90dp"
        android:text="-"
        android:textColorLink="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/buttonPlus"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="64dp"
        android:minWidth="90dp"
        android:text="+"
        android:textColorLink="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/buttonMultiply"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

    <Button
        android:id="@+id/buttonDot"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorButtonNormal"
        android:fontFamily="@font/roboto_light"
        android:minHeight="80dp"
        android:minWidth="90dp"
        android:text="."
        android:textColorLink="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonSum"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorActivatedHighlight"
        android:fontFamily="@font/roboto_light"
        android:minHeight="64dp"
        android:minWidth="90dp"
        android:text="="
        android:textColorLink="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/buttonMinus"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />

    <EditText
        android:id="@+id/result"
        android:layout_width="226dp"
        android:layout_height="41dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="#00000000"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/roboto_light"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="viewEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Inverse"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newNumber" />

    <EditText
        android:id="@+id/newNumber"
        style="@android:style/Widget.EditText"
        android:layout_width="229dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="#00000000"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
